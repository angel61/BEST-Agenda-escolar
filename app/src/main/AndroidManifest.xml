<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calendarioescolar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:name=".Aplicacion"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Actividades.AgendaObjectActivity"
            android:label="AgendaObject View"
            android:parentActivityName=".Actividades.AgendaActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Actividades.EditarObjectAgendaActivity"
            android:label="Editar actividad"
            android:parentActivityName=".Actividades.AgendaActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Actividades.AgendaActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Actividades.MainActivity"
            android:label="Principal"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Actividades.HorarioActivity"
            android:label="Horario"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Actividades.EditarHorarioActivity"
            android:label="Editar horario"
            android:parentActivityName=".Actividades.HorarioActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>