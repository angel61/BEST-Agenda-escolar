<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.example.calendarioescolar.Fragments.home.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_gallery"
            app:destination="@id/nav_agenda"
            app:popUpTo="@+id/nav_inicio" />
        <action
            android:id="@+id/action_nav_home_to_nav_slideshow"
            app:destination="@id/nav_horario"
            app:popUpTo="@+id/nav_inicio" />
    </fragment>

    <fragment
        android:id="@+id/nav_agenda"
        android:name="com.example.calendarioescolar.Fragments.agenda.AgendaFragment"
        android:label="Agenda"
        tools:layout="@layout/agenda_layout" />

    <fragment
        android:id="@+id/nav_horario"
        android:name="com.example.calendarioescolar.Fragments.horario.HorarioFragment"
        android:label="Horario"
        tools:layout="@layout/horario_layout" />
</navigation>