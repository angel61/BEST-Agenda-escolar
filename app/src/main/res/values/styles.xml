<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.DialogoPers" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:dialogTitle">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/gris</item>
    </style>
    <style name="TextInputMod" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
    <style name="inputD1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="inputD2" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>




</resources>
