<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/detalle_elemento_agenda">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:text="Comentario"
                    android:textSize="18dp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/tv_comentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_asignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:text="Asigantura"
            android:textSize="18dp"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_asignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematicas"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:text="Fecha"
            android:textSize="18dp"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/05/2020"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_Tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Tipo"
            android:textColor="#757575"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_Tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordatorio"
            android:textColor="#000000" />
    </LinearLayout>
        </LinearLayout>
</androidx.core.widget.NestedScrollView>